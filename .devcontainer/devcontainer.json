// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "tsqa_pipeline_v2",
  "build": {
    "dockerfile": "../.docker/Dockerfile",
    "context": "..",
    "args": {
      "COMPOSE_PROJ_NAME": "quants-generate",
      "KIND": "3.10"
    }
  },
  "mounts": [
    {"source": "/storage-01/common-ts/datasets/AMASS", "target": "/workspaces/tsqa-pipeline-v2/stmc/datasets", "type": "bind"},
    {"source": "/storage-01/common-ts/deps", "target": "/workspaces/tsqa-pipeline-v2/stmc/deps", "type": "bind"},
    {"source": "/storage-01/common-ts/models", "target": "/workspaces/tsqa-pipeline-v2/stmc/pretrained_models", "type": "bind"}
  ],
  "postCreateCommand": "python -m pip install -e quants[dev]",
  "remoteUser": "root", // More info: https://aka.ms/dev-containers-non-root
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "tamasfe.even-better-toml",
        "github.copilot",
        "genieai.chatgpt-vscode",
        "ms-toolsai.jupyter",
        "mikestead.dotenv",
        "charliermarsh.ruff"
      ]
    }
  },
  "runArgs": [
    "--gpus",
    "\"device=00,01\"",
    "--shm-size",
    "50G"
  ]
}
