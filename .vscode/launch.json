{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File in STMC",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/stmc",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Generate Motion",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "generate",
            "console": "integratedTerminal",
            "args": "generate-motion-stmc --dataset-path /workspaces/tsqa-pipeline-v2/datasets-debug/manual"
        },
        {
            "name": "Python Debugger: Animate Motion",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "generate",
            "console": "integratedTerminal",
            "args": "render-stmc --dataset-path /workspaces/tsqa-pipeline-v2/datasets-debug/manual"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}